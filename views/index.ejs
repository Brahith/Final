<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Manager</title>
  <link rel="stylesheet" href="/Content/style.css">
</head>
<body>

  <!-- Header Section -->
  <header>
    <div class="logo-container">
      <h1>Task Manager</h1>
    </div>
  </header>

  <!-- Main Content Section -->
  <main>
    <section class="task-list">
      <h2>Active Tasks</h2>
      <table>
        <thead>
          <tr>
            <th>Task Name</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="taskTableBody">
          <% tasks.forEach(task => { %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.endDate %></td>
            <td><%= task.status %></td>
            <td><%= task.priority %></td>
            <td>
              <button class="edit-btn">Edit</button>
              <button class="delete-btn">Delete</button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </section>
  </main>

  <!-- Footer Section -->
  <footer>
    <p>&copy; 2024 Task Manager. All rights reserved.</p>
  </footer>

</body>
</html>
