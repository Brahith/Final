<%- include Partials/header.ejs %>

<body>

  <!-- Header Section -->
  <header>
    <div class="logo-container">
      <h1>Task Manager</h1>
    </div>
    <div class="header-buttons">
      <button class="dark-mode-toggle" onclick="toggleDarkMode()">ðŸŒ™ Dark Mode</button>
    </div>
  </header>

  <!-- Search Bar Section -->
  <div class="search-container">
    <input type="text" id="taskSearch" placeholder="Search tasks by name...">
    <i class="fas fa-search search-icon"></i>
  </div>

  <!-- Main Content Section -->
  <main>
    <section class="task-list">
      <div class="task-list-header">
        <h2>Active Tasks</h2>
        <button class="create-task-btn" onclick="window.location.href='/create'">
          <i class="fas fa-plus"></i> New Task
        </button>
      </div>
      <table>
        <thead>
          <tr>
            <th>Task Name</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Actions</th>
          </tr>
        </thead>
        
        <tbody id="taskTableBody">
          <!-- Static Task Rows with Icons -->
          <tr>
            <td>Complete Project Proposal</td>
            <td>Dec 09, 2024</td>
            <td>Not Started</td>
            <td>High</td>
            <td>
              <button class="action-btn edit-btn"><i class="fas fa-edit"></i></button>
              <button class="action-btn delete-btn"><i class="fas fa-trash-alt"></i></button>
            </td>
          </tr>
          <tr>
            <td>Design UI Mockups</td>
            <td>Nov 20, 2024</td>
            <td>In Progress</td>
            <td>Medium</td>
            <td>
              <button class="action-btn edit-btn"><i class="fas fa-edit"></i></button>
              <button class="action-btn delete-btn"><i class="fas fa-trash-alt"></i></button>
            </td>
          </tr>
          <tr>
            <td>Write Documentation</td>
            <td>Dec 15, 2024</td>
            <td>Completed</td>
            <td>Low</td>
            <td>
              <button class="action-btn edit-btn"><i class="fas fa-edit"></i></button>
              <button class="action-btn delete-btn"><i class="fas fa-trash-alt"></i></button>
            </td>
          </tr>
        </tbody>
      </table>
    </section>
  </main>

  <!-- Footer Section -->
  <footer>
    <p>&copy; 2024 Task Manager. All rights reserved.</p>
  </footer>

  <script src="main.js"></script>
</body>