<%- include('Partials/header') %>

<main class="container">
    <!-- Message Area -->
    <% if(message.length > 0){ %>
        <div class="alter altert-danger">
            <%=message %>
        </div>
    <%} %>
    <div class="row">
        <div class="offser-md-4 col-md-4">
            <h1>Please register</h1>
            <form method="post" autocomplete="off">
                <!-- username,displayName -->
                <fieldset class="form-group">
                    <label for="username"></label>
                    <input type="text" class="form-control"
                    name="username" placeholder="Enter the username"
                    id="username" requiered autofocus>
                </fieldset>

                <fieldset class="form-group">
                    <label for="password"></label>
                    <input type="password" class="form-control"
                    name="password" placeholder="Enter the password"
                    id="password" requiered>

                <fieldset class="form-group">
                    <label for="email"></label>
                    <input type="text" class="form-control"
                    name="email" placeholder="Enter the email"
                    id="email" requiered autofocus>
                </fieldset>

                <fieldset class="form-group">
                    <label for="displayName"></label>
                    <input type="text" class="form-control"
                    name="displayName" placeholder="Enter the displayName"
                    id="displayName" requiered autofocus>
                </fieldset>

                <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-success"
                    value="Register">
                    <a href="/">
                    <input type="button" class="btn btn-warning"
                    value="Cancel">
                </fieldset>
            </form>
            
        </div>
    </div>
</main>

<%- include('Partials/footer') %>